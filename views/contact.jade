extends layout

block content
    .container
        h1 留言给我
        p 使用下面的表格发信息给我

    .container
        .row
            .col-md-6.col-md-offset-3
                .well.well-sm
                    form.form-horizontal(action="" method="post")
                        fieldset
                            legend.text-center 留言
                            // Name input
                            .form-group
                                label.col-md-3.control-label(for="name") 名字
                                .col-md-9
                                    input#name.form-control(name="name" type="text" placeholder="你的名字")
                            // Email input
                            .form-group
                                label.col-md-3.control-label(for="email") E-mail
                                .col-md-9
                                    input#email.form-control(name="email" type="text" placeholder="你的email")
                            // Message body
                            .form-group
                                label.col-md-3.control-label(for="message") 留言
                                .col-md-9
                                    textarea#message.form-control(name="message" placeholder="请在这儿输入你的想法..." rows="5")
                            // Form actions
                            .form-group
                                .col-md-12.text-right
                                    button.btn.btn-primary.btn-lg(type="submit") 发送